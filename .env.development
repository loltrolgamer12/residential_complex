# Configuración del Servidor
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# JWT y Seguridad
JWT_SECRET=your-development-secret-key
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Límites y Caché
RATE_LIMIT_WINDOW=900000  # 15 minutos en milisegundos
RATE_LIMIT_MAX=100        # máximo de solicitudes por ventana
CACHE_DURATION=86400000   # 24 horas en milisegundos

# Backup (opcional en desarrollo)
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000  # 24 horas en milisegundos
BACKUP_RETENTION_DAYS=7   # días que se mantienen los backups

# Rutas
UPLOAD_PATH=./uploads
DATA_PATH=./data
LOGS_PATH=./logs